<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menuBackground"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/activity_menu_background_visual_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/menuBackground"/>

    <Button
        android:id="@+id/activity_menu_play_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/activity_menu_highscore_button"
        android:background="@color/colorPrimaryDark"
        android:text="@string/play"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/activity_menu_highscore_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimaryDark"
        android:text="@string/highscore"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/activity_menu_options_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_menu_highscore_button"
        android:background="@color/colorPrimaryDark"
        android:text="@string/options"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

</android.support.constraint.ConstraintLayout>